# Example environment for the API (root)
# Copy to `.env` and fill in values

# App
PORT=3000
NODE_ENV=development

# Database
MONGO_URL=mongodb://localhost:27017
DB_NAME=myapp

# RabbitMQ
# Used for local development only; in docker-compose the URL is built from RABBITMQ_USER/PASSWORD
RABBITMQ_USER=app
RABBITMQ_PASSWORD=please_change_me
RABBITMQ_URL=amqp://app:please_change_me@localhost:5672

# Grafana (set strong password in real .env)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_strong_password

# Alertmanager SMTP (fill in for real email delivery)
# SendGrid guide: Username is literally 'apikey'. Password is your SendGrid API key.
SMTP_SMARTHOST=smtp.sendgrid.net:587
SMTP_FROM=you@example.com          # Must be a verified sender in SendGrid
SMTP_AUTH_USERNAME=apikey          # Literal string 'apikey'
SMTP_AUTH_PASSWORD=REPLACE_WITH_REAL_SMTP_PASSWORD
SMTP_REQUIRE_TLS=true

# Alertmanager receiver email
ALERT_EMAIL_TO=you@example.com
